{
  "manifest_version": 2,
  "name": "Pokémon Showdown Randbats Tooltip",
  "description": "Enhanced tooltip functionality for Pokémon Showdown Random Battle formats.",
  "version": "1.0.2",
  "icons": {
    "16": "/16x16.png",
    "32": "/32x32.png",
    "48": "/48x48.png",
    "128": "/128x128.png"
  },
  "web_accessible_resources": ["/index.js"],
  "content_scripts": [
    {
      "matches": ["*://*.pokemonshowdown.com/*", "*://*.psim.us/*"],
      "js": ["/shim.js"]
    }
  ]
}